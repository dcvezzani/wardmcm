<%= simple_form_for(@less_active_member) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :surname %>
    <%= f.input :given_name %>
    <%= f.input :current_address %>
    <%= f.input :new_address %>
    <%= f.input :new_phone %>
    <%= f.input :reference %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
