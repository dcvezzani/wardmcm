<%= simple_form_for(@text_message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :send_at %>
    <%= f.input :body, as: :text, :input_html => { :rows => 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
